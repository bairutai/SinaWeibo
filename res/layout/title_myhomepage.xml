<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white" >
    
    <ImageView
        android:id="@+id/title_myhomepage_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/more_become_light" />

    <ImageView
        android:id="@+id/title_myhomepage_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:background="@drawable/return_become_light" />
    
    <ImageView
       android:id="@+id/title_myhomepage_search"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:clickable="true"
       android:layout_toLeftOf="@id/title_myhomepage_more" 
       android:background="@drawable/search_become_light"
       android:layout_marginRight="5dp"/>
</RelativeLayout>
