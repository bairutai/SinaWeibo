<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imageexplore_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <TextView
        android:id="@+id/imageexplore_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/transparent_corner"
        android:textSize="20sp"
        android:textColor="@color/white" />

    <com.touchgallery.GalleryWidget.GalleryViewPager
        android:layout_below="@id/imageexplore_txt"
        android:id="@+id/imageexplore_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >
    </com.touchgallery.GalleryWidget.GalleryViewPager>

    <Button
        android:id="@+id/imageexplore_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/transparent_corner"
        android:text="保存"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/imageexplore_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imageexplore_save"
        android:background="@drawable/transparent_corner"
        android:text="原图"
        android:textColor="@color/white" />

</RelativeLayout>