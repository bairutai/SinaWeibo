            android:id="@+id/mybaseinfo_jianjie_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mybaseinfo_suozaidi_layout"
            android:layout_marginTop="1dp"
            android:background="@drawable/layout_become_gray"
            android:clickable="true"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/mybaseinfo_jianjie_triangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/triangle" />

            <TextView
                android:id="@+id/mybaseinfo_jianjie"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="简介"
                android:textColor="@color/black2"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toStartOf="@id/mybaseinfo_jianjie_triangle"
                android:layout_toRightOf="@id/mybaseinfo_jianjie"
                android:text="www.411633267@qq.comaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>