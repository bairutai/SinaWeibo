<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <TextView
        android:id="@+id/usernamedialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="编辑昵称"
        android:textSize="20sp" />

    <com.bairutai.openwidget.ClearEditText
        android:id="@+id/usernamedialog_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernamedialog_title"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/usernamedialog_lianjie"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernamedialog_username"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:text="更多好昵称推荐,尽在VIP专享活动>"
        android:textColor="@color/blue" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernamedialog_lianjie"
        android:layout_marginTop="5dp"
        android:padding="10dp" >

        <Button
            android:id="@+id/usernamedialog_cancleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消" />

        <Button
            android:id="@+id/usernamedialog_confirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定" 
            android:textColor="@drawable/txt_from_orange_to_dorange"/>
    </LinearLayout>

</RelativeLayout>